model Auth {
  id         String   @id @default(cuid())
  email      String   @unique
  password   String // hashed
  updated_at DateTime @default(now())
  created_at DateTime @default(now())
  banned     Boolean  @default(false)
  User       User?
}

model Profile {
  id        String  @id @default(cuid())
  Media     Media[]
  User      User[]
  bio       String
  last_name String
  name      String
  user_id   String  @unique
}

model Media {
  id         String    @id @default(cuid())
  Profile    Profile   @relation(fields: [profile_id], references: [id])
  created_at DateTime  @default(now())
  profile_id String
  type       MediaType
  url        String
}

enum MediaType {
  AVATAR
  BACKGROUND
}

enum UserType {
  ADMIN
  USER
  MOD
}
